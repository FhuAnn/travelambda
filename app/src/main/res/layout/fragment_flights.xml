<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_flight"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="bottom"
            android:text="@string/title_flights"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittxt"
                android:drawableEnd="@drawable/chevron_down"
                android:fontFamily="@font/montserrat_light"
                android:hint="From"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittxt"
                android:drawableEnd="@drawable/chevron_down"
                android:fontFamily="@font/montserrat_light"
                android:hint="To"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittxt"
                android:drawableEnd="@drawable/calendar"
                android:fontFamily="@font/montserrat_light"
                android:hint="Departure Date"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_edittxt"
                android:drawableEnd="@drawable/calendar"
                android:fontFamily="@font/montserrat_light"
                android:hint="Return Date"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_edittxt"
                    android:fontFamily="@font/montserrat_light"
                    android:hint="Passengers"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_edittxt"
                    android:drawableEnd="@drawable/chevron_down"
                    android:fontFamily="@font/montserrat_light"
                    android:hint="Seat Class    "
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/flightSearchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_btn_blue"
                android:backgroundTint="@null"
                android:fontFamily="@font/poppins_medium"
                android:padding="16dp"
                android:text="Search"

                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>